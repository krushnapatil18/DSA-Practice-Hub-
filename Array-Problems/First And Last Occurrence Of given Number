package dsa;

public class LinearSearch_firstAndLast_oocurence {
	public static void main(String[] args) {
		int arr[] = {1,2,3,4,5,7,8,0,4,6,7,9,7};
		int n = arr.length;
		int k = 4;
		
		for(int i=0;i<n;i++) {
			if(arr[i]== k ) {
				System.out.println("First Occurence Of Element: "+i);
				break;
			}
		}

		for(int i=n-1;i>=1;i--) {
			if(arr[i]== k ) {
				System.out.println("Last Occurence Of Element: "+i);
				break;
			}
		}
		
		
	}

}
